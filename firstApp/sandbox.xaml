        <materialDesign:DialogHost Grid.Row="3" Grid.Column="1">

            <materialDesign:DialogHost.DialogContent>
                <Grid Grid.Row="2" Grid.Column="1" Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource MaterialDesignSubheadingTextBlock}">Save table specification
                    </TextBlock>
                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <TextBox materialDesign:HintAssist.Hint="Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,20" DockPanel.Dock="Top"/>
                        <ComboBox materialDesign:HintAssist.Hint="Group" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,20" DockPanel.Dock="Top">
                            <ComboBoxItem>Private</ComboBoxItem>
                            <ComboBoxItem>Public</ComboBoxItem>
                        </ComboBox>
                        <ComboBox materialDesign:HintAssist.Hint="Status" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,20" DockPanel.Dock="Top">
                            <ComboBoxItem>Draft</ComboBoxItem>
                            <ComboBoxItem>Locked</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Row="0" Grid.Column="0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Stretch"
                                MinWidth="280"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                SpellCheck.IsEnabled="True"
                                materialDesign:HintAssist.Hint="English short description"
                                Height="80">

                        </TextBox>


                        <TextBox Grid.Row="0" Grid.Column="1"
                                TextWrapping="Wrap"
                                VerticalAlignment="Stretch"
                                MinWidth="280"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                SpellCheck.IsEnabled="True"
                                materialDesign:HintAssist.Hint="French short description"
                                Height="80">

                        </TextBox>
                        <TextBox Grid.Row="1" Grid.Column="0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Stretch"
                                MinWidth="280"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                SpellCheck.IsEnabled="True"
                                materialDesign:HintAssist.Hint="French long description"
                                Height="80">

                        </TextBox>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                TextWrapping="Wrap"
                                VerticalAlignment="Stretch"
                                MinWidth="280"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                SpellCheck.IsEnabled="True"
                                materialDesign:HintAssist.Hint="English long description"
                                Height="80">

                        </TextBox>
                    </Grid>


                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsDefault="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">

                            ACCEPT
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsCancel="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">

                            CANCEL
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
            <Button Grid.Row="2" Grid.Column="1" Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" Content="Open" />

        </materialDesign:DialogHost>


